<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/tp_kia_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot Control"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_style1"
            android:onClick="button_exit_program"
            android:text="Exit"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#87CEEB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutRobot1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/layout_style_border_white_2dp"
            app:layout_constraintEnd_toStartOf="@+id/layoutRobot2"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutAdress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_style_border_white_2dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/robot1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Robot 1"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAdress1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Address :"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/robot1_title" />

                <EditText
                    android:id="@+id/etAdress1"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/edittext_style"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="192.168.40.249"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAdress1"
                    app:layout_constraintStart_toEndOf="@+id/tvAdress1"
                    app:layout_constraintTop_toTopOf="@+id/tvAdress1" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/etAdress1">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_radio_button"
                        android:button="@null"
                        android:onClick="button_robot1_connect"
                        android:text="Connect"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_radio_button"
                        android:button="@null"
                        android:onClick="button_robot1_disconnect"
                        android:text="Disconnect"
                        android:textAlignment="center"
                        android:textSize="25sp" />

                </RadioGroup>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutProgram1"
                android:layout_width="match_parent"
                android:background="@drawable/layout_style_border_white_2dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/layoutAdress1">

                <TextView
                    android:id="@+id/tvProgram1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Program"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spinner_robot1"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvProgram1" />

                <EditText
                    android:id="@+id/robot1_editpname"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="program.urp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner_robot1"
                    app:layout_constraintStart_toEndOf="@+id/spinner_robot1"
                    app:layout_constraintTop_toTopOf="@+id/spinner_robot1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSet1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/button_style1"
                    android:onClick="button_robot1_setpname"
                    android:text="SET"
                    app:layout_constraintBottom_toBottomOf="@+id/robot1_editpname"
                    app:layout_constraintStart_toEndOf="@+id/robot1_editpname"
                    app:layout_constraintTop_toTopOf="@+id/robot1_editpname" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_robot1_load"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_style1"
                    android:onClick="button_robot1_loadprogram"
                    android:text="Load program"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnSet1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutCommand1"
                android:background="@drawable/layout_style_border_white_2dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutProgram1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCommand1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutRobot2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/layout_style_border_white_2dp"
            app:layout_constraintEnd_toStartOf="@+id/layoutRobot3"
            app:layout_constraintStart_toEndOf="@+id/layoutRobot1">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutRobot3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/layout_style_border_white_2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/layoutRobot2">


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>